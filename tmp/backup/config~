# ---------------------------------------------------------------------------------------
# i3 config by nikki
# ---------------------------------------------------------------------------------------

set $mod Mod1
set $sock ~/.i3/ipc.sock
set $font -*-dejavu sans mono-medium-r-normal-*-12-*-*-*-*-*-*-*

# --- dzen position/dimensions --------------

# right screen
# ------------
#
# dzenr_left = -dzenr_width - tray_width
# dzenr_top  = -dzenr_height
#
# tray_width = 0 (tray is on left screen)
#
set $dzenr_left 190
set $dzenr_width 1036
set $dzenr_top 748
set $dzenr_height 18

# --- client colors -------------------------

# normal client
set $bord #303030
set $bg #242424
set $text #f6f3e8

# focused client, unfocused container
set $ibord #101010
set $ibg #303030
set $itext #f6f3e8

# focused client, focused container
set $sbord #343434
set $sbg #224488
set $stext #ffffff

# urgent client
set $ubord #343434
set $ubg #cc6b61
set $utext #f6f3e8

# --- bar colors ----------------------------

# bar background
set $bbg #000000

# bar normal workspace
set $bnbord #000000
set $bnbg #000000
set $bntext #e8e8e8

# bar focused workspace, unfocused monitor
set $bibord #000000
set $bibg #000000
set $bitext #ef9f00

# bar focused workspace, focused monitor
set $bsbord #000000
set $bsbg #000000
set $bstext #ef9f00

# bar urgent workspace
set $bubord #000000
set $bubg #000000
set $butext #cc6b61

# ---------------------------------------------------------------------------------------

ipc-socket $sock
font $font

new_window 1pixel

client.unfocused $bord $bg $text
client.focused_inactive $ibord $ibg $itext
client.focused $sbord $sbg $stext
client.urgent $ubord $ubg $utext

bar {
    colors {
        background $bbg
        inactive_workspace $bnbord $bnbg $bntext
        active_workspace $bibord $bibg $bitext
        focused_workspace $bsbord $bsbg $bstext
        urgent_workspace $bubord $bubg $butext
    }
}

exec conky -c ~/.i3/dzonky | dzen2 -x $dzenr_left -w $dzenr_width -y $dzenr_top -h $dzenr_height -ta r -fn "$font" -bg "$bbg" -fg "$bntext"

# ---------------------------------------------------------------------------------------

# apps
bindsym $mod+Shift+Return exec urxvtc
bindsym $mod+Shift+f exec firefox
bindsym $mod+Shift+b exec chromium
bindsym $mod+Shift+v exec urxvt -e vim
bindsym $mod+Shift+x exec xournal
bindsym $mod+Shift+t exec thunderbird
bindsym $mod+Shift+i exec urxvt -e irssi
bindsym $mod+Shift+n exec urxvt -e ncmpcpp

bindsym $mod+p exec dmenu_run -b -fn "$font" -nb "$bbg" -nf "$bntext" -sb "$bsbg" -sf "$bstext"

bindsym $mod+Prior exec amixer set Master 5%+
bindsym $mod+Next exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
# For ThinkVantage button
bindsym XF86Launch1 exec matlab -desktop -nosplash

# special clients
for_window [title="Welcome to Wolfram Mathematica 8"] floating enable
for_window [title="ImageJ"] floating enable
for_window [class="XMathematica"] floating enable
for_window [class="thegame"] floating enable
for_window [class="Gimp"] floating enable
for_window [class="feh"] floating enable
for_window [class="MPlayer"] floating enable
for_window [class="Wine"] floating enable
for_window [class="MATLAB"] floating enable
for_window [class="urxvt"] border 1pixel
for_window [class="chromium"] border none
for_window [instance="Firefox"] border none

# assign certain programs to open on specific workspaces
assign [class="Thunderbird"] 3

# ---------------------------------------------------------------------------------------

# process
bindsym $mod+q kill
bindsym $mod+Shift+e exec killall conky xscreensaver urxvtd i3
bindsym $mod+r reload
bindsym $mod+Shift+r restart

# float
floating_modifier $mod
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# layouts
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+m layout tabbed
bindsym $mod+d layout default

# border
bindsym $mod+t border toggle

# tree
bindsym $mod+u focus parent
bindsym $mod+i focus child
bindsym $mod+b split h
bindsym $mod+v split v

# focus/move client
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize client
bindsym $mod+Control+h resize grow left
bindsym $mod+Control+j resize grow down
bindsym $mod+Control+k resize grow up
bindsym $mod+Control+l resize grow right

# view/move to workspace
bindsym $mod+asciitilde workspace back_and_forth
# bindsym $mod+Shift+w move output xinerama-0
# bindsym $mod+Shift+e move output xinerama-1
bindsym $mod+XF86Back workspace previous
bindsym $mod+XF86Forward workspace next

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+exclam move workspace 1
bindsym $mod+Shift+at move workspace 2
bindsym $mod+Shift+numbersign move workspace 3
bindsym $mod+Shift+dollar move workspace 4
bindsym $mod+Shift+percent move workspace 5
bindsym $mod+Shift+asciicircum move workspace 6
bindsym $mod+Shift+ampersand move workspace 7
bindsym $mod+Shift+asterisk move workspace 8
bindsym $mod+Shift+parenleft move workspace 9
bindsym $mod+Shift+parenright move workspace 10

# ---------------------------------------------------------------------------------------

# Startup scripts

exec ~/.i3/fehbg.sh
exec ~/.i3/add_custom_res.sh
